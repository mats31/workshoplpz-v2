@import '../../stylesheets/mixins'

.project
  display none
  left 0
  position absolute
  top 0
  width 100%
  z-index 10

.project__container
  color #ffffff
  font-body()

.project__titleContainer
  height 100vh
  position relative

.project__back
  font-family 'gotham-medium'
  font-size 2rem
  position absolute
  right 70px
  top 70px

.project__preview
  background-repeat none
  background-size cover
  position absolute
  left 50%
  top 50%
  height 50%
  width 50%
  opacity 0
  transform translate3d(-50%, -50%, 0)

.project__title
  font-title()
  position absolute
  left 50%
  top 50%
  width 23.17708333vw
  opacity 0
  transform: translate3d(-50%, -50%, 0);
  text-align: center;
  min-width: 450px;

.project__sections
  background #191919
  position relative

.project__flexContainer
  // display flex
  padding 0 5.45%
  width 89.1%

// .project__firstFlex
//   position absolute
//   top 50%
//   transform translate3d( 0, -50%, 0 )

.project__column
  display inline-block
  margin-left -0.4rem
  vertical-align top
  width 25%

.project__team
  // transform translate(50%, 0)
  padding-left 12.5%
  width 12.5%


.project__role
  // transform translate(50%, 0)
  padding-left 12.5%
  width 12.5%

.project__category
  font-subtitle()
  margin 0 0 6rem 0

.project__role
  margin-bottom 9rem

.project__secondContainer
  padding 0 5.45%
  width 89.1%

.project__backTop
  height 7.65rem
  margin-bottom 11.2rem
  position relative

.project__backTopText
  cursor pointer
  font-family 'gotham-light'
  font-size 2.4rem
  position absolute
  right 10.8rem
  top 2rem

.project__sliderContainer
  flex-grow 0
  flex-shrink 0
  flex-basis 61.8429591175%

.project__chapterContainer
  font-family 'gotham-light'
  font-size 2.4rem
  flex-grow 0
  flex-shrink 0
  flex-basis calc( 38.1570408825% - 6.6rem )
  padding-left 6.6rem

.project__chapterTitle
  font-family 'majesti-medium'
  font-size 4.5rem
  padding-right 10.8rem
  text-align right

.project__backBottom
  height 7.65rem
  margin-top 11.2rem
  position relative

.project__backBottomText
  cursor pointer
  font-family 'gotham-light'
  font-size 2.4rem
  position absolute
  left 10.8rem
  bottom 2rem

.project__sliderContainer
  width 49.63541667%

.project__pitchDescription,
.project__roleDescription,
.project__rewardDescription
  font-body()
